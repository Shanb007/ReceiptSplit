// Prisma schema for ReceiptSplit

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== NextAuth Models ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // App relations
  groups           Group[]
  splitwiseToken   String?  // Encrypted Splitwise access token
  splitwiseUserId  String?  // Splitwise user ID

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// ==================== App Models ====================

model Group {
  id        String   @id @default(cuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  splitwiseGroupId Int?  // Linked Splitwise group ID for export

  members   Member[]
  receipts  Receipt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Member {
  id              String   @id @default(cuid())
  name            String
  groupId         String
  group           Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  splitwiseUserId String?  // For Splitwise export mapping

  itemAssignments ItemAssignment[]
  settlements     Settlement[]
  paidReceipts    Receipt[]  // Receipts this member paid for

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Receipt {
  id            String   @id @default(cuid())
  groupId       String
  group         Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  payerId       String?  // Member who paid for this receipt
  payer         Member?  @relation(fields: [payerId], references: [id], onDelete: SetNull)

  imageUrl      String?
  merchantName  String?
  receiptDate   DateTime?

  subtotal      Int?     // Stored in cents
  tax           Int?     // Stored in cents
  tip           Int?     // Stored in cents
  total         Int?     // Stored in cents

  taxStrategy   TaxTipStrategy @default(PROPORTIONAL)
  tipStrategy   TaxTipStrategy @default(PROPORTIONAL)

  status        ReceiptStatus @default(PENDING)
  rawExtraction Json?    // Raw AI extraction response

  lineItems     LineItem[]
  settlements   Settlement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LineItem {
  id              String   @id @default(cuid())
  receiptId       String
  receipt         Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)

  name            String
  quantity        Int      @default(1)
  unitPrice       Int      // Stored in cents
  lineTotal       Int      // Stored in cents

  confidence      ConfidenceLevel @default(HIGH)
  confidenceReason String?

  isValid         Boolean  @default(true)  // User can mark as invalid/ignore
  sortOrder       Int      @default(0)

  itemAssignments ItemAssignment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ItemAssignment {
  id          String   @id @default(cuid())
  lineItemId  String
  lineItem    LineItem @relation(fields: [lineItemId], references: [id], onDelete: Cascade)
  memberId    String
  member      Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)

  // Share as fraction (e.g., 1/3 stored as numerator=1, denominator=3)
  // For simplicity in MVP, we'll use equal splits, so this is 1/N where N = number of people assigned
  shareNumerator   Int @default(1)
  shareDenominator Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([lineItemId, memberId])
}

model Settlement {
  id          String   @id @default(cuid())
  receiptId   String
  receipt     Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  memberId    String
  member      Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)

  itemsTotal  Int      // Sum of item shares in cents
  taxShare    Int      // Allocated tax in cents
  tipShare    Int      // Allocated tip in cents
  finalAmount Int      // Total owed in cents

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([receiptId, memberId])
}

// ==================== Enums ====================

enum ReceiptStatus {
  PENDING      // Just uploaded, not processed
  PROCESSING   // AI extraction in progress
  REVIEW       // Extracted, needs user review
  SPLITTING    // User is assigning items
  SETTLED      // Settlement computed
  EXPORTED     // Exported to Splitwise
}

enum ConfidenceLevel {
  HIGH
  MEDIUM
  LOW
}

enum TaxTipStrategy {
  PROPORTIONAL  // Based on each person's pre-tax total
  EQUAL         // Split evenly among all participants
}
