# ── Mode ──
# Set to "local" for self-hosted single-user setup (no Google OAuth, no Cloudinary, no scan limits)
# Leave unset or set to anything else for cloud/multi-user mode
# NEXT_PUBLIC_MODE="local"

# ── Database (PostgreSQL) ──
# Local Postgres: set both to the same connection string
# Supabase: use pooler (port 6543) for DATABASE_URL, direct (port 5432) for DIRECT_URL
DATABASE_URL="postgresql://user:password@localhost:5432/receiptsplit"
DIRECT_URL="postgresql://user:password@localhost:5432/receiptsplit"

# ── NextAuth ──
# Use http://localhost:3000 for local dev, your domain for production
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"

# ── OpenAI (for receipt extraction) ──
OPENAI_API_KEY="sk-your-openai-api-key"

# ── Splitwise OAuth (optional — https://secure.splitwise.com/apps) ──
# Set redirect URI to http://localhost:3000/api/auth/splitwise/callback for local dev
SPLITWISE_CLIENT_ID="your-splitwise-client-id"
SPLITWISE_CLIENT_SECRET="your-splitwise-client-secret"
SPLITWISE_REDIRECT_URI="http://localhost:3000/api/auth/splitwise/callback"

# ────────────────────────────────────────────────
# Cloud mode only (not needed when NEXT_PUBLIC_MODE="local")
# ────────────────────────────────────────────────

# Google OAuth (https://console.cloud.google.com/apis/credentials)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Cloudinary — image uploads (https://cloudinary.com)
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# Encryption key for storing user BYO API keys (generate with: openssl rand -base64 32)
# ENCRYPTION_KEY="generate-with-openssl-rand-base64-32"
